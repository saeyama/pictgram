<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row justify-content-center">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>

            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_pack_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>  
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <i class="fas fa-heart icon_heart"></i>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>

            <%= link_to new_comment_path(topic_id: topic.id), method: :get do %>
              <%= image_pack_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h3 class="comment-list-title">コメント</h3>
            <% topic.comments.each do |comment| %>
              <p class="comment-text"><%= comment.content %></p>
              <p class="comment-text"><%= link_to '削除', comment_path(comment.id),method: :delete, data: { confirm: 'Are you sure?' } %></p>
　　　　　　　<% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>